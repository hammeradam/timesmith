{
  "name": "timesmith",
  "type": "module",
  "version": "2.7.0",
  "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
  "description": "A fluent API for time duration calculations",
  "author": "Hammer Ádám",
  "license": "MIT",
  "homepage": "https://github.com/hammeradam/timesmith#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hammeradam/timesmith.git"
  },
  "bugs": {
    "url": "https://github.com/hammeradam/timesmith/issues"
  },
  "keywords": [
    "time",
    "duration",
    "timespan",
    "typescript",
    "builder"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm run build && pnpm run test && pnpm run lint"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.8.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.22.0",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
